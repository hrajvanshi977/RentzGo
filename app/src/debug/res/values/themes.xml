<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RentzGo" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2a3eb1</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:ignore="NewApi">#2a3eb1</item>

        <item name="android:textColorPrimary">@android:color/white</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RentzGo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.RentzGo.NoActionBarWithStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/primary_color</item>

        <item name="android:textColorPrimary">@color/gray</item>
    </style>

<!--    <style name="Theme.RentzGo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

    <style name="Theme.RentzGo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.RentzGo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>